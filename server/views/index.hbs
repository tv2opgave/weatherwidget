<div id="app" class="widget" style="margin: 10px; width: 300px;">
  {{#if message}}
    <div className="alert alert-warning" role="alert">
      {{message}}
    </div>
  {{/if}}
  <div class="panel panel-info">
    <div class="panel-heading">Weather in <b>{{location}}</b></div>
    <ul class="list-group">
      <li class="list-group-item">Temperature: <b>{{temperature}}</b></li>
      <li class="list-group-item">Humidity: <b>{{humidity}}</b></li>
      <li class="list-group-item">Wind: <b>{{wind}}</b></li>
      <li class="list-group-item">
          <form class="form-inline"><div class="form-group">
            <input type="text" name="city" class="form-control" id="city" placeholder="City"></div><button type="submit" class="btn btn-default">Search</button>
          </form>
      </li>
    </ul>
  </div>
</div>
{{{state}}}
